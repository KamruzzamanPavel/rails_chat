<div class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
  <h1 class="text-2xl font-bold mb-6">Sign Up</h1>

  <%= form_with model: @user, class: "space-y-4" do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul class="list-disc pl-5">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :username, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.text_field :username, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" %>
    </div>

    <div>
      <%= f.submit "Create Account", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <p>Already have an account? <%= link_to "Sign In", signin_path, class: "text-blue-600 hover:underline" %></p>
  </div>
</div>