<div class="message <%= message.user == current_user ? 'flex justify-end' : '' %>">
  <div class="<%= message.user == current_user ? 'bg-blue-600 text-white' : 'bg-gray-100' %> rounded-lg px-4 py-2 max-w-[75%]">
    <div class="font-medium <%= message.user == current_user ? 'text-blue-100' : 'text-gray-700' %>">
      <%= message.user.username %>
    </div>
    <div>
      <%= message.content %>
    </div>
    <div class="text-xs <%= message.user == current_user ? 'text-blue-200' : 'text-gray-500' %> mt-1">
      <%= time_ago_in_words(message.created_at) %> ago
    </div>
  </div>
</div>